# REQUIRED SERVER ENV
NODE_ENV=development

# Database (Supabase)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Mimir Supabase (read-only for game statistics)
PUBLIC_MIMIR_SUPABASE_URL=
PUBLIC_MIMIR_SUPABASE_ANON_KEY=

# Voi Network Configuration (for on-chain treasury data)
# Contract IDs are stored in the treasury_balances table
PUBLIC_VOI_NODE_URL=https://mainnet-api.voi.nodely.dev
PUBLIC_VOI_INDEXER_URL=https://mainnet-idx.voi.nodely.dev

# PUBLIC (client) env - SvelteKit uses PUBLIC_ prefix instead of NEXT_PUBLIC_
PUBLIC_SUPABASE_URL=
PUBLIC_SUPABASE_ANON_KEY=

# Coinbase CDP Embedded Wallets (for game accounts / wallet management)
# Get these from https://portal.cdp.coinbase.com/
PUBLIC_CDP_PROJECT_ID=
PUBLIC_CDP_API_KEY_NAME=organizations/your-org/apiKeys/your-key-id
# CDP_API_KEY_PRIVATE_KEY should be the full PEM key (with \n for newlines)
# For ED25519: -----BEGIN PRIVATE KEY-----\nYourKey...\n-----END PRIVATE KEY-----
# For ECDSA: -----BEGIN EC PRIVATE KEY-----\nYourKey...\n-----END EC PRIVATE KEY-----
CDP_API_KEY_PRIVATE_KEY=

PUBLIC_SWAP_API_URL=
PUBLIC_WALLETCONNECT_PROJECT_ID=

# Note: Authentication is handled by Supabase Auth
# Enable Google OAuth in your Supabase project dashboard:
# https://supabase.com/dashboard/project/_/auth/providers
